<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="8dp"
    android:theme="@style/Theme.TextMain">

    <ImageView
        android:id="@+id/icon_item_configuracion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_icono_item_configuracion"
        android:padding="8dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/text_item_configuracion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Texto item"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_flecha_abajo"
        android:rotation="270"/>
</LinearLayout>
